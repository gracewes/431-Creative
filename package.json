{
  "name": "431-Creative",
  "version": "1.0.0",
  "description": "",
  "main": "app.js",
  "scripts": {
    "test": "standard && mocha; cucumber-js",
    "client": "parcel client/index.html --port 3000",
    "database": "docker run --name mongo-dev-431 -p 27017:27017 -d mongo & > /dev/null",
    "start": "npm run database; standard --fix; nodemon app.js",
    "stop": "docker stop mongo-dev-431; docker rm mongo-dev-431",
    "format": "standard --fix"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jeff-hykin/431-Creative.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/jeff-hykin/431-Creative/issues"
  },
  "homepage": "https://github.com/jeff-hykin/431-Creative#readme",
  "dependencies": {
    "express": "^4.16.4",
    "parcel-bundler": "^1.11.0",
    "react": "^16.8.2",
    "react-dom": "^16.8.2"
  },
  "devDependencies": {
    "cucumber": "^5.1.0",
    "mocha": "^5.2.0",
    "nodemon": "^1.18.10",
    "parcel": "^1.11.0",
    "standard": "^12.0.1"
  },
  "nodemonConfig": {
    "ignore": ["dist/*", ".cache/*"]
  },
  "standard": {
    "env": [ "mocha" ],
    "globals": ["fetch"]
  },
  "settings": {
    "database": {
      "DB_NAME": "creative-db",
      "PROD_DB": "localhost:27017",
      "DEV_DB": "localhost:27017"
    },
    "PORT": 3000
  }
}
